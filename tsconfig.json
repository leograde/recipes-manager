{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/*": ["./src/*"],
      "@domain": ["./src/modules/recipe/domain/index"],
      "@application": ["./src/modules/recipe/application/index"],
      "@http": ["./src/modules/recipe/http/index"],
      "@infrastructure": ["./src/modules/recipe/infrastructure/index"],
      "@utils": ["./src/utils/index"]
    }
  }
}
